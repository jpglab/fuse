{
    "name": "@jpglab/fuse",
    "version": "0.0.1",
    "type": "module",
    "description": "Connect to & control your camera via PTP with 2 lines of TypeScript",
    "exports": {
        "./web": {
            "types": "./dist/web.d.ts",
            "import": "./dist/web.mjs",
            "require": "./dist/web.js"
        },
        "./node": {
            "types": "./dist/node.d.ts",
            "import": "./dist/node.mjs",
            "require": "./dist/node.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "dev:examples": "vite --config vite.examples.config.ts",
        "build": "vite build && tsc -p tsconfig.build.json",
        "build:watch": "vite build --watch",
        "build:examples": "vite build --config vite.examples.config.ts",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "camera:sony": "tsx scripts/test-sony.ts",
        "camera:sony:verbose": "tsx scripts/test-sony.ts -v",
        "camera:usb": "tsx scripts/test-usb.ts",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "quality": "npm run typecheck && npm run lint",
        "clean": "rm -rf dist dist-web",
        "preview": "vite preview",
        "prepublishOnly": "npm run clean && npm run quality && npm test && npm run build",
        "compile": "tsc -p tsconfig.json --noEmit",
        "test:usb": "vitest run tests/01_usb.test.ts --config vitest.config.ts",
        "test:ptp": "vitest run tests/02_ptp.test.ts --config vitest.config.ts",
        "test:generic_camera": "vitest run tests/03_generic_camera.test.ts --config vitest.config.ts",
        "test:sony_camera": "vitest run tests/04_sony_camera.test.ts --config vitest.config.ts",
        "test:client": "vitest run tests/05_client.test.ts --config vitest.config.ts",
        "test:properties": "vitest run tests/06_properties.test.ts --config vitest.config.ts",
        "test:all": "vitest run --config vitest.config.ts",
        "all": "bun run compile && bun run lint && bun run format && bun run test:all"
    },
    "keywords": [
        "ptp",
        "picture-transfer-protocol",
        "camera",
        "photography",
        "usb",
        "webusb",
        "nodejs",
        "iso15740"
    ],
    "author": "JPGLab",
    "license": "MIT",
    "dependencies": {
        "usb": "^2.11.0"
    },
    "devDependencies": {
        "@types/glob": "^9.0.0",
        "glob": "^11.0.3",
        "string-similarity": "^4.0.4",
        "@tailwindcss/postcss": "^4.1.13",
        "@types/node": "^20.11.0",
        "@types/usb": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^1.2.0",
        "@vitest/ui": "^1.2.0",
        "autoprefixer": "^10.4.21",
        "buffer": "^6.0.3",
        "eslint": "^8.56.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "process": "^0.11.10",
        "tailwindcss": "^4.1.13",
        "typescript": "^5.9.2",
        "vite": "^7.1.7",
        "vitest": "^1.2.0"
    },
    "optionalDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "engines": {
        "node": ">=18"
    }
}