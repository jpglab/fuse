{
    "name": "@jpglab/fuse",
    "version": "0.0.1",
    "type": "module",
    "description": "Connect to & control your camera via PTP with 2 lines of TypeScript",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "vite build && tsc --emitDeclarationOnly",
        "dev": "vite build --watch",
        "test": "vitest run",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write .",
        "usb-ids": "bun run src/transport/usb/usb-ids/generate-usb-ids.ts"
    },
    "keywords": [
        "ptp",
        "picture-transfer-protocol",
        "camera",
        "photography",
        "usb",
        "webusb",
        "nodejs",
        "iso15740"
    ],
    "author": "JPGLab",
    "license": "MIT",
    "dependencies": {
        "ink": "^6.3.1",
        "ink-spinner": "^5.0.0",
        "usb": "^2.11.0"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^20.11.0",
        "@types/usb": "^2.0.0",
        "@types/w3c-web-usb": "^1.0.13",
        "@vitest/coverage-v8": "^1.2.0",
        "@vitest/ui": "^1.2.0",
        "glob": "^11.0.3",
        "string-similarity": "^4.0.4",
        "vite": "^7.1.7",
        "vitest": "^1.2.0"
    },
    "engines": {
        "node": ">=18"
    }
}
